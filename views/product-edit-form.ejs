<!DOCTYPE html>
<html lang="en">
  
    <%- include("partials/head.ejs") %> 
  
  <body>
    <%- include("partials/header.ejs") %> 

   

    <main >
      <div class="">
        <h1>Editar el producto</h1>

        <form action="/products/edit/<%= producto.id %>?_method=PUT" method="POST">
  
          <div class="">
            <label for="nombre">Nombre:</label><br>
            <input type="text" value="<%= producto.name %>" name="name" id="name">
          </div>
          
          <div class="" >
            <label for="category">Categoria:</label><br>
            <select name ='category'>
              <% categories.forEach(function(category){ %>
                
                <option value ='<%= category.id %>'> <%= category.nombre %> </option>
                
                <% }) %>
              
          
            </select>
          </div>
  
          <div class="form-edit">
            <label for="precio">Precio:</label><br>
            <input type="number" value="<%= producto.price %>" name="price" id="precio">
          </div>
          <div class="form-edit">
            <label for="measure">Medidas:</label><br>
            <input type="text" value="<%= producto.measure %>" name="measure" id="measure">
          </div>
          <div class="form-edit">
            <label for="color">Color:</label><br>
            <input type="text" value="<%= producto.color %>" name="color" id="color">
          </div><br>
  
          

          <div class="form-edit">
    
            <button type="submit">
              Editar
            </button>

          </div>
        </form>
        
        <form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST"><br>
          <button type="submit">
            Borrar
          </button>
        </form>
      
      </div>
    </main>
    <%- include("partials/footer.ejs") %> 

  </body>
</html>