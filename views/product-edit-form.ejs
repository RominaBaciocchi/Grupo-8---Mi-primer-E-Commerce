<!DOCTYPE html>
<html lang="en">
  
    <%- include("partials/head.ejs") %> 
  
  <body>
    <%- include("partials/header.ejs") %> 

    <h1>Editar el producto:</h1>

    <main >
      <div class="">

        <form action="/products/edit/<%= producto.id %>?_method=PUT" method="POST">
  
          <div class="">
            <label for="nombre">Nombre:</label>
            <input type="text" value="<%= producto.name %>" name="name" id="name">
          </div>
          
          <div class="" >
            <label for="category">Categoria:</label>
            <input type="text" value="<%= producto.category %>" name="category"  id="category">
          </div>
  
          <div class="">
            <label for="precio">Precio:</label>
            <input type="number" value="<%= producto.price %>" name="price" id="precio">
          </div>
          <div class="">
            <label for="measure">Medidas:</label>
            <input type="text" value="<%= producto.measure %>" name="measure" id="measure">
          </div>
          <div class="">
            <label for="color">Color:</label>
            <input type="text" value="<%= producto.color %>" name="color" id="color">
          </div>
  
          

          <div class="">
    
            <button type="submit">
              Editar
            </button>

          </div>
        </form>
        
        <form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST">
          <button type="submit">
            Borrar
          </button>
        </form>
      
      </div>
    </main>
    <%- include("partials/footer.ejs") %> 

  </body>
</html>